@{
    Layout = null;
    ViewBag.Title = "Login - TechFlow";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

        <style >
        body {
            margin: 0;
            padding: 0;
            background: #f4f4f4;
            font-family: "Segoe UI", sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-card {
            width: 420px;
            background: white;
            padding: 32px;
            border-radius: 16px;
            box-shadow: 0 4px 18px rgba(0,0,0,0.15);
            text-align: center;
        }

            .login-card img {
                width: 260px; /* ⭐ Logo GRANDE */
                margin-bottom: 20px;
            }

            .login-card label {
                display: block;
                text-align: left;
                margin-bottom: 6px;
                font-weight: 600;
            }

            .login-card input {
                width: 100%;
                padding: 11px;
                border-radius: 8px;
                border: 1px solid #ccc;
                margin-bottom: 16px;
                font-size: 15px;
            }

        .btn-login {
            width: 100%;
            background: #B4FF00;
            color: black;
            padding: 12px;
            font-size: 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            margin-top: 8px;
        }

            .btn-login:hover {
                opacity: .9;
            }
    </style>
</head>
<body>

    <div class="login-card">
        <img src="~/lib/logo-techflow.png" />

        @if (ViewBag.Erro != null)
        {
            <div class="erro">@ViewBag.Erro</div>
        }

        <form method="post">
            <div class="form-group">
                <label>E-mail</label>
                <input type="text" name="email" />
            </div>

            <div class="form-group">
                <label>Senha</label>
                <input type="password" name="senha" />
            </div>

            <button type="submit" class="btn-login">Entrar</button>
        </form>
    </div>

</body>
</html>
