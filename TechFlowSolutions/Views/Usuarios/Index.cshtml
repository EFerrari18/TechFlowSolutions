@model IEnumerable<TechFlowSolutions.Models.Usuario>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Gerenciar Usuários";
}

<div style="padding: 20px 40px;">

    <h2>Gerenciar Usuários</h2>

    <div style="margin: 15px 0;">
        <a href="/Usuarios/Criar"
           style="
               padding: 10px 16px;
               background-color: #b4ff00;
               border-radius: 6px;
               font-weight: bold;
               color: black;
               text-decoration: none;
           ">
            +  Novo Usuário
        </a>
        </div>
    <table class="tabela">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Perfil</th>
                <th>Data Cadastro</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.Nome</td>
                    <td>@u.Email</td>
                    <td>@u.Perfil</td>
                    <td>@u.DataCadastro.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a href="/Usuarios/Editar/@u.IdUsuario" class="btn btn-secondary">Editar</a>
                        <a href="/Usuarios/Excluir/@u.IdUsuario" class="btn btn-danger"
                           onclick="return confirm('Deseja realmente excluir este usuário?');">
                            Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
